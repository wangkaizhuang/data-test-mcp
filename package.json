{
  "name": "testid-helper-mcp",
  "version": "1.0.0",
  "description": "MCP Server for automatically adding data-testid attributes to frontend elements",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "testid-helper-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dest/bundle.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "testid",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/generator": "^7.23.0",
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "glob": "^10.3.10",
    "simple-git": "^3.22.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.6.0",
    "@types/babel__traverse": "^7.20.0",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.27.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
